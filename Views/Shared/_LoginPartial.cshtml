@using Microsoft.AspNetCore.Identity
@using AspNetCoreTodo.Models;
@using Microsoft.AspNetCore.Identity.EntityFrameworkCore
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> userManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
       
        <div>
            <a class="nav-link text-dark" title="Manage">Hello @User.Identity?.Name!</a>
        <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Login">Logout</a>
        </div
        
        
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-dark" href="/Account/Register">Register</a>
    <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Register">Logout</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" href="/Account/Login">Login</a>
    </li>
}
</ul>
